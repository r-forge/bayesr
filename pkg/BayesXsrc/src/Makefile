# CXXFLAGS += -O3 -ansi

BayesX: ${OBJS}
	${CXX} ${OBJS} ${LDFLAGS} ${TARGET_ARCH} -o BayesX

clean:
	rm -f ${OBJS}

.PHONY: all clean 

